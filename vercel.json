{
  "version": 2,
  "name": "nexushome-iot-platform",
  "builds": [
    {
      "src": "NexusHome.IoT.csproj",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "bin/Release/net8.0/publish"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/health/(.*)",
      "dest": "/health/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "ASPNETCORE_ENVIRONMENT": "Production",
    "ConnectionStrings__DefaultConnection": "Data Source=./data/nexushome.db",
    "JwtAuthentication__SecretKey": "@jwt_secret_key",
    "JwtAuthentication__Issuer": "NexusHome.IoT",
    "JwtAuthentication__Audience": "NexusHome.Clients",
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
  },
  "functions": {
    "**/*.cs": {
      "runtime": "dotnet@8.0.0"
    }
  }
}
