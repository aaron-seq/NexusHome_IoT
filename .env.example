# Environment sample for local/dev. Copy to .env and set real values.
ASPNETCORE_ENVIRONMENT=Development

# Database
SQLSERVER_SA_PASSWORD=ChangeMeStrong!2025
ConnectionStrings__DefaultConnection=Server=sqlserver;Database=NexusHomeIoT;User=sa;Password=${SQLSERVER_SA_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true

# Redis
REDIS_PASSWORD=ChangeMeStrong!2025
ConnectionStrings__Redis=redis:6379,password=${REDIS_PASSWORD}

# MQTT
MqttBroker__Host=mqtt-broker
MqttBroker__Port=1883
MqttBroker__Username=nexususer
MqttBroker__Password=ChangeMeStrong!2025

# JWT
JwtAuthentication__SecretKey=ChangeThisToARandomLongSecretValue
JwtAuthentication__Issuer=NexusHome.IoT
JwtAuthentication__Audience=NexusHome.Clients

# Weather API (optional)
WEATHER_API_KEY=
